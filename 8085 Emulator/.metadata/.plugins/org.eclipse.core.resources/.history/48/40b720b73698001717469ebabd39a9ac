import java.util.*; 
public class pangaram {
	public static void main(String [] arg) {
		Scanner input=new Scanner(System.in);
		int t=input.nextInt();
		for(int i=0;i<t;i++) {
			int a[]=new int[26];
			long sum=0;
			for(int j=0;j<26;j++) {
				a[j]=input.nextInt();
				sum=sum+a[j];
			}
			String b=input.next();
			for(int j=0;j<26;j++) {
				String x=(char)('a'+j)+"";
				if(b.contains(x)) {
					sum-=a[j];
				}
			}
			System.out.println(sum);
		}
	}
}
